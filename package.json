{
  "name": "drawio-mcp-server",
  "version": "1.0.0",
  "description": "Draw.io MCP server for diagram generation",
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "bin": {
    "drawio-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "pnpm run clean && tsc -p tsconfig.build.json && node -e \"import('fs').then(fs => fs.copyFileSync('src/instructions.md', 'build/instructions.md'))\"",
    "ci": "pnpm install --frozen-lockfile",
    "clean": "node -e \"import('fs').then(fs => fs.rmSync('build', { recursive: true, force: true }))\"",
    "dev": "tsc -p tsconfig.build.json --watch",
    "inspect": "HOST=0.0.0.0 pnpx @modelcontextprotocol/inspector --config ./inspector.json --server drawio",
    "prepublishOnly": "pnpm run build",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start": "pnpm run start:both",
    "start:http": "pnpm run build && node ./build/index.js --transport http --http-port 8080",
    "start:both": "pnpm run build && node ./build/index.js --transport stdio,http --http-port 8080"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "files": [
    "build",
    "assets"
  ],
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "server",
    "draw.io",
    "drawio",
    "diagrams.net",
    "diagramsnet",
    "diagram",
    "claude"
  ],
  "author": "Simon Kurtz",
  "license": "MIT",
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "dependencies": {
    "@hono/node-server": "1.19.7",
    "@modelcontextprotocol/sdk": "1.25.1",
    "fast-xml-parser": "^5.3.4",
    "fuzzy-search": "3.2.1",
    "hono": "4.11.1",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@types/fuzzy-search": "^2.1.5",
    "@types/node": "25.0.3",
    "@vitest/coverage-v8": "2.1.0",
    "typescript": "5.9.3",
    "vitest": "2.1.0"
  }
}
