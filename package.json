{
  "name": "drawio-mcp-server",
  "version": "1.4.0",
  "description": "Provides Draw.io services to MCP Clients",
  "type": "module",
  "main": "index.js",
  "bin": {
    "drawio-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "ci": "pnpm install --frozen-lockfile",
    "dev": "tsc --watch",
    "inspect": "HOST=0.0.0.0 pnpx @modelcontextprotocol/inspector --config ./inspector.json --server drawio",
    "prepublishOnly": "pnpm run build",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "clean": "rimraf build coverage .eslintcache",
    "prebuild": "pnpm run clean"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "build"
  ],
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "server",
    "draw.io",
    "drawio",
    "diagrams.net",
    "diagramsnet",
    "diagram",
    "claude"
  ],
  "author": "Ladislav Gazo",
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "nanoid": "5.1.6",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.56.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "30.0.0",
    "@types/node": "^24.10.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
